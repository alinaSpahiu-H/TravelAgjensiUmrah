@using TravelAgjensiUmrah.App.Interfaces

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IUserService userService

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo and Name -->
    <a href="index3.html" class="brand-link">
        <img src="~/theme/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Taba Travel</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Current Admin Name and Picture -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                @*<img src="@userService.GetProfilePicture()" class="img-circle elevation-2" alt="User Image">*@
            </div>
            <div class="info">
                <a href="#" class="d-block"> @userService.GetFullName()</a>
            </div>
        </div>

        <!-- SidebarSearch Form -->
@*        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>*@

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                <li class="nav-item">
                    <a asp-area ="Admin" asp-controller="Home" asp-action="Index" class="nav-link active">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            @SharedLocalizer["Dashboard"]
                        </p>
                    </a>
                </li>
                <!-- End of Dashboard -->

                <!-- Users -->
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-user"></i>
                        <p> @SharedLocalizer["Users"] </p>
                    </a>
                  
                </li>
                <!-- End of Users-->

                <!-- Packages -->
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Packages" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-box"></i>
                        <p> @SharedLocalizer["Packages"] </p>
                    </a>
                </li>
                <!-- End of Packages-->

                <!-- Hotels -->
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Hotels" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-hotel"></i>
                        <p> @SharedLocalizer["Hotels"] </p>
                    </a>
                </li>
                <!-- End of Hotels-->

                <!-- Activities -->
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Activities" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-chess"></i>   
                        <p> @SharedLocalizer["Activities"] </p>
                    </a>
                </li>
                <!-- End of Activities-->

                <!-- RoomTypes -->
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Reservations" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-bed"></i>
                        <p> @SharedLocalizer["Reservations"] </p>
                    </a>
                </li>
                <!-- End of Roomtypes-->
          
                <!-- Calendar -->
                <li class="nav-item">
                    <a href="pages/calendar.html" class="nav-link">
                        <i class="nav-icon far fa-calendar-alt"></i>
                        <p>
                            Calendar
                            <span class="badge badge-info right">2</span>
                        </p>
                    </a>
                </li>

                <!-- Documentation -->
                <li class="nav-item">
                    <a href="https://adminlte.io/docs/3.1/" class="nav-link">
                      
                        <p>Documentation</p>
                    </a>
                </li>

                <!-- Logout -->
                <!-- Hidden Logout Form -->
                <form id="logoutForm" asp-area="Client" asp-controller="Account" asp-action="Logout" method="post" style="display: none;">
                    @* Add antiforgery token for security *@
                    @Html.AntiForgeryToken()
                </form>

                <!-- Logout Link -->
                <li class="nav-item">
                    <a href="javascript:void(0);" class="nav-link" onclick="document.getElementById('logoutForm').submit();">
                        <i class="nav-icon fas fa-sign-out-alt"></i>
                        <p>@SharedLocalizer["Logout"]</p>
                    </a>
                </li>



            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>