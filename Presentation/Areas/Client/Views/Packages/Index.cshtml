@model List<PackageViewModel>
@{
    ViewData["Title"] = "Packages";
}

<!-- Package Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Packages</h6>
            <h1 class="mb-5">Awesome Packages</h1>
        </div>

        <div class="row g-4 justify-content-center">
            @foreach (var package in Model)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="package-item">
                        <div class="overflow-hidden" >

                            <img class="img-fluid" style="height: 300px; width:400px;" src="~/ui/img/medina-1.jpg" alt="@package.PackageName">
                        </div>
                        <div class="d-flex border-bottom">
                            <small class="flex-fill text-center border-end py-2">
                                <i class="fa fa-map-marker-alt text-primary me-2"></i>@package.TotalDays days</small>
                            <small class="flex-fill text-center border-end py-2">
                                <i class="fa fa-calendar-alt text-primary me-2"></i>@package.StartDay?.ToString("dd.MM.yyyy")
                            </small>
                            <small class="flex-fill text-center py-2"><i class="fa fa-user text-primary me-2"></i>@package.Pax</small>
                        </div>

                        <div class="mt-3 text-center">
                            <h3 class="mb-0"> @package.PackagePrice €</h3>
                            <small class="text-primary">▼▼▼▼▼▼▼▼▼</small>
                            <p> @package.PackageName</p>
                        </div>

                        <div class="text-right p-3">
                            <h4>Në paketë përfshihet: </h4>
                            <p><small> ♦ Bileta Aeroplanit </small></p>
                            <p><small> ♦ Viza e Umres</small></p>
                            <p><small> ♦ Siguracioni Shendetsor</small></p>

                            <p><small> ♦ Hoxha shoqerues:<span class="text-primary"><b> @package.GuideGuyName</b></span></small></p>
                            <div class="d-flex justify-content-center mb-2">
                                <!-- Conditionally display the Book Now button -->
                                @if (package.Pax > 0)
                                {
                                    <div class="d-flex justify-content-center mb-2">
                                        <a href="#" class="btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Read More</a>
                                        <a href="@Url.Action("CreateReservation", "Reservations", new { area = "Client", packageId = package.Id })" class="btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Book Now</a>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex justify-content-center mb-2">
                                        <a href="#" class="btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Read More</a>
                                        <button class="btn btn-sm btn-secondary px-3" style="border-radius: 0 30px 30px 0;" disabled>Sold Out</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Package End -->
